<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./common/head') %>
</head>

<body>

  <!-- Spinner Start -->

<%- include('./common/spinner')%>

  <!-- Spinner End -->

  <!-- Topbar Start -->

<%- include('./common/topbar')%>

  <!-- Topbar End -->

  <!-- Navbar & Hero Start -->
  <div class="container-fluid position-relative p-0">
  <%- include('./common/navbar') %>
    </div>
  <!-- Navbar & Hero End -->

 

    <!-- Tour Booking Start -->
    <div class="container-fluid booking py-5">
        <div class="container py-5">
            
            <div class="row g-5 align-items-center">                
                <div class="col-lg-6">
                    <h1 class="text-white mb-3">Book A Tour Deals</h1>
                    <p class="text-white mb-4">Get <span class="text-warning">50% Off</span> On Your First Adventure Trip With Travela. Get More Deal Offers Here.</p>
                    <form method="post" action="confirmbookpost">

                        <div class="row g-3" >
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control bg-white border-0" id="name" placeholder="Your Name" name="name" value="<%= data.name %>">
                                    <label for="name">Your Name</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control bg-white border-0" id="email" placeholder="Your Email" name="email" value="<%= data.email %>">
                                <label for="email">Your Email</label></>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <div class="form-floating">
                                        <input type="text" class="form-control name bg-white border-0" id="phone" placeholder="Your phone" name="country" value="<%= alldata.country %>">
                                        <label for="phone">Country</label>
                                    </div>
                                </div>
                            </div>
                          
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control location bg-white border-0" id="name" placeholder="Your Name" name="city" value="<%= alldata.city %>">
                                    <label for="name">City</label>
                                </div>                                 
                            </div>

                            <div class="col-md-6">                                
                                    <div class="form-floating">
                                        <input type="text" class="form-control name bg-white border-0" id="name" placeholder="Your Name" name="guide" value="<%= alldata.guide %>">
                                        <label for="name">Guide</label>
                                    </div>                            
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <div class="form-floating">
                                        <input type="text" class="form-control kids name bg-white border-0" id="name" placeholder="Your Name" name="hotel" value="<%= alldata.hotel %>">
                                        <label for="name">Hotel</label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                              <div class="form-floating">
                                  <div class="form-floating">
                                      <input type="text" class="form-control kids name bg-white border-0" id="name" placeholder="Your Name" name="days" value="<%= alldata.days %>">
                                      <label for="name">Day</label>
                                  </div>
                              </div>
                          </div>

                          <div class="col-md-6">
                            <div class="form-floating">
                                <div class="form-floating">
                                    <input type="text" class="form-control kids name bg-white border-0" id="name" placeholder="Your Name" name="adult" value="<%= alldata.adult %>">
                                    <label for="name">Adult</label>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                          <div class="form-floating">
                              <div class="form-floating">
                                  <input type="text" class="form-control kids name bg-white border-0" id="name" placeholder="Your Name" name="kid" value="<%= alldata.kid %>">
                                  <label for="name">Kid</label>
                              </div>
                          </div>
                      </div>

                      <div class="col-md-6">
                        <div class="form-floating">
                            <div class="form-floating">
                                <input type="text" class="form-control kids name bg-white border-0" id="name" placeholder="Your Name" name="amount" value="<%= alldata.amount %>">
                                <label for="name">Amount</label>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                      <div class="form-floating">
                          <div class="form-floating">
                              <input type="text" class="form-control kids name bg-white border-0" id="name" placeholder="Your Name" name="food" value="<%= alldata.food %>">
                              <label for="name">Food</label>
                          </div>
                      </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-floating">
                        <div class="form-floating">
                            <input type="text" class="form-control kids name bg-white border-0" id="name" placeholder="Your Name" name="coupon" >
                            <label for="name">Coupon Code</label>
                        </div>
                    </div>
                </div>
                            
      <button class="btn btn-primary text-white w-100 py-3" type="submit">Book Now</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Tour Booking End -->


    <!-- Footer Start -->
        
    <%- include('./common/footer') %>

    <!-- Footer End -->
    
    

    

    </body>

    </html>