  <%- include('./common/navbar') %>
    </div>
  <!-- Navbar & Hero End -->

  <!-- Header Start -->
  <div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h3 class="text-white display-3 mb-4">Travel Packages</h1>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active text-white">Packages</li>

        </ol>    
    </div>
    </div>
<!-- Header End -->
<% if (success_msg.length>0) {%>
    <div class="alert alert-success"><%= success_msg %></div>
  <%}%>
  <% if (error_msg.length>0) {%>
    <div class="alert alert-danger"><%= error_msg %></div>
  <%}%>  
    <!-- Tour Booking Start -->
    <div class="container-fluid booking py-5">
        <div class="container py-5">
            <% if (success_msg.length>0) {%>
                <div class="alert alert-success"><%= success_msg %></div>
            <%}%>
            <% if (error_msg.length>0) {%>
                <div class="alert alert-danger"><%= error_msg %></div>
            <%}%>  
            <div class="row g-5 align-items-center">
                <div class="col-lg-6">
                    <h5 class="section-booking-title pe-3">Booking</h5>
                    <h1 class="text-white mb-4">Online Booking</h1>
                    <p class="text-white mb-4">Lorem ipsum dolor sit amet consectetur adipisicing elit. Aspernatur maxime ullam esse fuga blanditiis accusantium pariatur quis sapiente, veniam doloribus praesentium? Repudiandae iste voluptatem fugiat doloribus quasi quo iure officia.
                    </p>
                    <p class="text-white mb-4">Lorem ipsum dolor sit amet consectetur adipisicing elit. Aspernatur maxime ullam esse fuga blanditiis accusantium pariatur quis sapiente, veniam doloribus praesentium? Repudiandae iste voluptatem fugiat doloribus quasi quo iure officia.
                    
                </div>
                <div class="col-lg-6">
                    <h1 class="text-white mb-3">Book A Tour Deals</h1>
                    <p class="text-white mb-4">Get <span class="text-warning">50% Off</span> On Your First Adventure Trip With Travela. Get More Deal Offers Here.</p>
                    <form method="post" action="bookingcreate">

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control bg-white border-0" id="name" placeholder="Your Name" name="name" value="<%= data.name %>">
                                    <label for="name">Your Name</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control bg-white border-0" id="email" placeholder="Your Email" name="email" value="<%= data.email %>">
                                <label for="email">Your Email</label></>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <div class="form-floating">
                                        <input type="text" class="form-control name bg-white border-0" id="phone" placeholder="Your phone" name="phone" value="<%= data.phone %>">
                                        <label for="phone">Phone</label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control location bg-white border-0" id="name" placeholder="Your Name" name="location">
                                    <label for="name">Destination</label>
                                </div>
                            </div>

                            <div class="col-md-6">                                
                                    <div class="form-floating">
                                        <input type="text" class="form-control name bg-white border-0" id="name" placeholder="Your Name" name="person">
                                        <label for="name">Persons</label>
                                    </div>                            
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <div class="form-floating">
                                        <input type="text" class="form-control kids name bg-white border-0" id="name" placeholder="Your Name" name="kids">
                                        <label for="name">Kids</label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control message bg-white border-0" placeholder="Special Request" id="message" name="message" style="height: 100px"></textarea>
                                    <label for="message">Special Request</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary text-white w-100 py-3" type="submit">Book Now</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Tour Booking End -->


    <!-- Footer Start -->
        
    <%- include('./common/footer') %>

    <!-- Footer End -->
    
    

    

    </body>

    </html>