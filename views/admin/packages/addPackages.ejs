<body>
  <body>
    <!-- ======= Header ======= -->
  
    <%- include('../common/head')%>

    <!-- ======= Sidebar ======= -->

    <%- include ('../common/navbar')%>
  

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Service Page</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="dashboard">Home</a></li>
          <li class="breadcrumb-item active">Add Packages</li>
        </ol>
      </nav>
    </div>
  
  <!-- End Page Title -->
    
    <div  class="container">
      <div class="container">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Packages Form</h5>

            <!-- Vertical Form -->
            <form class="row g-3" method="post" action="createPackages" enctype="multipart/form-data">
              
              <div class="col-12">
                <label for="inputNanme4" class="form-label">Amount</label>
                <input type="text" class="form-control" name="amount">
              </div>

              <div class="col-12">
                <label for="inputNanme4" class="form-label">Image</label>
                <input type="file" class="form-control" name="image">
              </div>

              <div class="col-12">
                <label for="inputNanme4" class="form-label">Location</label>
                <input type="text" class="form-control" name="location">
              </div>

              <div class="col-12">
                <label for="inputNanme4" class="form-label">Days</label>
                <input type="text" class="form-control" name="days">
              </div>

              <div class="col-12">
                <label for="inputNanme4" class="form-label">Person</label>
                <input type="text" class="form-control" name="person">
              </div>

              <div class="col-12">
                <label for="inputNanme4" class="form-label">Title</label>
                <input type="text" class="form-control" name="title">
              </div>

              <div class="col-12">
                <label for="inputNanme4" class="form-label">Hotel</label>
                <input type="text" class="form-control" name="hotel">
              </div>

              
              <div class="col-12">
                <label for="inputNanme4" class="form-label">Para</label>
                <input type="text" class="form-control" name="para">
              </div>

              <div class="col-12">
                <label for="inputNanme4" class="form-label">Guide Name : </label>
                <input type="text" class="form-control" name="guide">
              </div>

              <div class="col-12">
                <label for="guideId">Choose a Guide:</label>
                <select name="guideId" id="guideId">                
                <option value="">Select</option>
                <% for(let item of allguide) {%>
                <option value="<%= item._id %>"><%= item.sub_title %></option>
                <%}%>
                </select>
              </div>



              <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
              </div>
            </form><!-- Vertical Form -->

          </div>
        </div>

      </div>
    </div>


  </main><!-- End #main -->

  <!-- ======= Footer ======= -->
 
  <%- include ('../common/footer') %>

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <!-- Vendor JS Files -->
  <script src="/admin/assets/vendor/apexcharts/apexcharts.min.js"></script>
  <script src="/admin/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/admin/assets/vendor/chart.js/chart.umd.js"></script>
  <script src="/admin/assets/vendor/echarts/echarts.min.js"></script>
  <script src="/admin/assets/vendor/quill/quill.min.js"></script>
  <script src="/admin/assets/vendor/simple-datatables/simple-datatables.js"></script>
  <script src="/admin/assets/vendor/tinymce/tinymce.min.js"></script>
  <script src="/admin/assets/vendor/php-email-form/validate.js"></script>

  <!-- Template Main JS File -->
  <s src="/admin/assets/js/main.js"></s

</body>

</html>