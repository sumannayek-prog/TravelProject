  <div  class="container">
    
      <table class="table table-bordered">
        <thead>
            <tr>
            <th style="text-align: center; align-items: center;" scope="col">Id</th>
            <th>Name</th>
                      <th>Email</th>
                      <th>City</th>
                      <th>Country</th>
                      <th>Guide</th>
                      <th>Hotel</th>
                      <th>Days</th>
                      <th>Adult</th>
                      <th>Kid</th>
                      <th>Amount</th>
                      <th>Food</th>
                      <th>Coupon Code</th>
                      <th colspan="2">Action</th>
          </tr>
        </thead>  
        <% let id = 0 
        if (allBookingdata.length > 0) {%>         
        <tbody>
          <% for (let item of allBookingdata)  {%>           
            <tr>
            <th style="align-items: center; text-align: center;" scope="row"><%= ++id %></th>
                      <td><%= item.name %></td>
                      <td><%= item.email %></td>            
                      <td><%= item.city %></td>
                      <td><%= item.country %></td>
                      <td><%= item.guide %></td>
                      <td><%= item.hotel %></td>
                      <td><%= item.days %></td>
                      <td><%= item.adult %></td>
                      <td><%= item.kid %></td>
                      <td><%= item.amount %></td>
                      <td><%= item.food %></td>
                      <td><%= item.coupon %></td>          

                    <% if (item.status == 0 ) {%>
                            
            <td style="align-items: center; text-align: center;" >
            <a href="deactivebooking<%= item._id %>"><i style="font-size: 1.5rem; color: rgb(177, 0, 0);" class="bi bi-hand-thumbs-down-fill" id="deactive"></i></a></td>

            <%  }else {%>
                
            <td style="align-items: center; text-align: center;" >
            <a href="activebooking<%= item._id %>"><i style="font-size: 1.5rem; color: rgb(8, 180, 2)"class="bi bi-hand-thumbs-up-fill" id="active"></i></a></td>

            <% } %>

            <td style="align-items: center; text-align: center;">
            <a href="deletebooking<%= item._id %>"><i class="fa-solid fa-trash" style="color: #e20325;"></i></a>

            </td>
          </tr> 
          <%} } %>                 
          
          </table>
      
  
        <nav aria-label="Page navigation example">
